@page
@using AJJDHotel.Utility
@model AJJDHotel.Pages.MyAccountModel
@{
    ViewData["Title"] = "Home page";
}
<div id="account">
    <h1>My account</h1>

    <h2>Update personal info</h2>

    <form name="update-info" method="GET"
          action="process.php">

        <div class="update-box">
            <div class="textbox">
                <label for="first-name">First Name:</label>
                <input type="text" placeholder="" name="first-name" value="@Model.ApplicationUser.FirstName">
            </div>

            <div class="textbox">
                <label for="Last-name">Last name:</label>
                <input type="text" placeholder="" name="Last-name" value="@Model.ApplicationUser.LastName">
            </div>

            <div class="textbox">
                <label for="phone-number">phone number:</label>
                <input type="text" placeholder="" name="phone-number" value="@Model.ApplicationUser.PhoneNumber">
            </div>

            <div class="textbox">
                <label for="birthday">birthday:</label>
                @* <input type="date" placeholder="" name="birthday" value="">*@
                <input type="text" placeholder="01/14/1990" value="@Model.ApplicationUser.DOB.ToString("d")" onfocus="(this.type='date')" onblur="(this.type='text')">
            </div>

            <div class="textbox">
                <label for="email">email:</label>
                <input type="email" name="email" id="email-address" placeholder="email@example.com" />
            </div>

            <input type="submit" class="btn buttonblue" name="submit" value="update" />
            <h4>change password</h4>

            <div class="textbox">
                <label for="new-Password">New password:</label>
                <input type="password" placeholder="password" name="new-Password" value="">
            </div>

            <div class="textbox">
                <label for="retype-Password">retype password:</label>
                <input type="password" placeholder="password" name="retype-Password" value="">
            </div>

            <div class="textbox">
                <label for="old-Password">old password:</label>
                <input type="password" placeholder="password" name="old-Password" value="">
                <br>
                <input type="submit" class="btn buttonblue" name="submit" value="change" />
            </div>

    </form>

    <h2>My reservations</h2>
    <table id="accReservationTable" border="1">
        <thead>
            <tr>
                <th>Confirmation Number</th>
                <th>Room Type</th>
                <th>Beds</th>
                <th>View</th>
                <th>Date</th>
                <th>Total Charge</th>
                <th>number of guests</th>
                <th></th>
            </tr>
        </thead>
        @foreach (var r in Model.UsersReservations)
        {
            int confNum = Model.MakeConfirmationNumber(r.ReservationId);
            <tr>

                <th>@confNum</th>
                <th>n/a</th>
                <th>n/a</th>
                <th>n/a</th>
                <th>@r.StartDate.ToShortDateString() &ndash; @r.EndDate.ToString("d")</th>
                <th>@r.TotalCharge</th>
                <th>@r.NumGuests</th>
                <th>
                    @if ((r.StartDate - DateTime.Today).TotalDays > 2)
                    {

                        <button type="submit" class="button buttonblue">Cancel</button>

                    }
                </th>
            </tr>
        }
        @*<tr>
                <th>123B</th>
                <th>Junior Suite</th>
                <th>1/10/2020</th>
                <th>8 days</th>
                <th>1 guests</th>
            </tr>
            <tr>
                <th>123C</th>
                <th>Deluxe Suite</th>
                <th>10/15/2020</th>
                <th>5 days</th>
                <th>2 guests</th>
            </tr>*@

    </table>

    <h2>Manage my account </h2>
    <input type="button" class="btn buttonblue" id="submit" value="Delete my account" />

</div>