            <th>
                @Html.DisplayNameFor(model => model.RoomType[0].Beds)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomType[0].View)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RoomType[0].RoomName)
