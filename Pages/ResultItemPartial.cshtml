@model List<AJJDHotel.Models.RoomType>
@{
}
<div class="resultsWrapper">

    @for(int i=0; i<Model.Count; i++)
    {

    <div class="resultItem">
        <img src="@Model[i].ImgPath" alt="testImg" height="128" width="128" />
        <input type="hidden" value="@i" />
        <input type="hidden" id="beds" value="@Model[i].Beds" />
        <input type="hidden" id="view" value="@Model[i].View"/>
        <input type="hidden" id="RoomName" value="@Model[i].RoomName"/>
        <input type="hidden" id="Rate" value="@Model[i].Rate"/>
        <div class="textContainer">
            <h3>@Model[i].RoomName</h3>
            @*<a href="~/Purchase?id=@i"><button class="button buttonblue">Reserve</button></a>*@
            <a asp-page="/Purchase" asp-route-ID="@Model[i].RoomTypeId"><button class="button buttonblue">Reserve</button></a>
            <h5>$@Model[i].Rate</h5>
            <p>@Model[i].Description</p>

        </div>
    </div>
    }

</div>