@model List<AJJDHotel.Models.RoomType>
@{
}
<div class="resultsWrapper">

    @for(int i=0; i<Model.Count; i++)
    {
        <div class="resultItem">
            <img src="@Model[i].ImgPath" alt="testImg" height="128" width="128" />
            <input type="hidden" value="@i" />
            <div class="textContainer">
                <h3>@Model[i].RoomName</h3>
                @if (i != 2)
                {
                <a href="~/Purchase?id=@i"><button>Reserve</button></a>
                }
                else
                {
                    <a href="~/Sorry"><button>Reserve</button></a>
                }
                <h5>$@Model[i].Rate</h5>
                <p>@Model[i].Description</p>
            </div>
        </div>
    }

</div>