@page
@model PurchaseModel
@{
    ViewData["Title"] = "Purchase";
}

<h1>Purchase Button Page</h1> @*Comment for purchase.*@

<div class="row">
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <img src="..." alt="Picture">
            </div>
        </div>
    </div>
    <div class="col-sm-6">
        <div class="card">
            <div class="card-body">
                <h2 class="card-title">Facts</h2>
                <p class="card-text">Information about the tentative purchase.</p>
            </div>
        </div>
    </div>
</div>

<form>
    <div class="form-group row">
        <label for="PurchaseName" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control-plaintext" id="PurchaseName" value="[Name Goes Here]">
        </div>
    </div>
    <div class="form-group row">
        <label for="PurchaseEmail" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="email" class="form-control-plaintext" id="PurchaseEmail" value="[Email Goes Here]">
        </div>
    </div>
    <div class="form-group row">
        <label for="PurchasePhone" class="col-sm-2 col-form-label">Phone</label>
        <div class="col-sm-10">
            <input type="tel" class="form-control-plaintext" id="PurchasePhone" value="[Phone Number Goes Here]">
        </div>
    </div>
    <div class="form-group row">
        <button class="btn btn-success" type="submit">Continue</button>
    </div>
</form>

