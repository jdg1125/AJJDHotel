<div class="textContainer">
    <div class="resultItem">
        <img src="@Model.Results[0].ImgPath" alt="testImg" height="128" width="128" />

        <div class="textContainer">
            <h3>@Model.Results[0].RoomName</h3>
            <h5>$@Model.Results[0].Rate</h5>
            <p>@Model.Results[0].Description</p>
        </div>
    </div>
</div>

<form>
    <div class="form-group row">
        <label for="PurchaseName" class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control-plaintext" id="PurchaseName" value="[Name Goes Here]">
        </div>
    </div>
    <div class="form-group row">
        <label for="PurchaseEmail" class="col-sm-2 col-form-label">Email</label>
        <div class="col-sm-10">
            <input type="email" class="form-control-plaintext" id="PurchaseEmail" value="[Email Goes Here]">
        </div>
    </div>
    <div class="form-group row">
        <label for="PurchasePhone" class="col-sm-2 col-form-label">Phone</label>
        <div class="col-sm-10">
            <input type="tel" class="form-control-plaintext" id="PurchasePhone" value="[Phone Number Goes Here]">
        </div>
    </div>
    <div class="form-group row">
        <a href="~/OrderSummary"><button class="btn btn-success" type="submit">Continue</button></a>
    </div>
</form>

